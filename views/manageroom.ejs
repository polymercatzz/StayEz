    <nav class="navbar">
        <div class="logo">
            <img src="../img/logo.jpeg" alt="" class="pic">
            <div class="stayEz">StayEz</div>
        </div>
        <div class="menu-toggle" id="menuToggle">☰</div>
        <ul class="nav-links" id="navLinks">
            <li><a href="/admin/main">Home</a></li>
            <li><a href="/logout" class="hidden">Log Out</a></li>
            <a href="/logout" class="logout-icon"><img src="../img/log-out.png" alt="" class="pic3"></a>
        </ul>
    </nav>
    <% current = null %>
    <% data.forEach((item, index) => { %>
        <% if (current != item.department_id) { 
            current = item.department_id %>
            <!-- จัดรูปตรงนี้ให้หน่อย -->
            <h1><%= item.department_name %></h1>
            <div class="container">
        <% } %>
        <a href="/admin/edit_room/<%= item.room_id %>">
            <div class="card <%= item.user_id ? 'reserve' : 'empty' %>">
                <img src="../img/condo.jpg">
                <p>ห้อง : <%= item.room_name %></p>
                <% if (item.user_id) { %>
                    <p>ชื่อผู้เช่า : <%= item.first_name %> <%= item.last_name %></p>
                <% } else { %>
                    <p>ไม่มีผู้พักอาศัย</p>
                <% } %>
                <p>ราคา : <%= item.price %></p>
            </div>
        </a>
        
        <% if (index == data.length - 1 || current != data[index + 1].department_id) { %>
            </div>
        <% } %>
    <% }) %>

